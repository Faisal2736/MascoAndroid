                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/masco_club_points_banner"
                    android:scaleType="fitXY"/>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
