<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardV_job_desc"
    android:layout_width="170dp"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/linear_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/items"

        android:padding="2dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:src="@drawable/cheetos" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:fontFamily="@font/hind_medium"
            android:maxLines="2"
            android:text="Cheetos dbfsbflsblskbdsklbdlksbdklsbdklsbdkldbldadlabldbadsdsds"
            android:textColor="@color/md_grey_900"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="4dp"
            android:fontFamily="@font/hind_semibold"
            android:text="$5"
            android:textColor="@color/md_grey_900"
            android:textSize="18sp" />


        <!--        <RelativeLayout-->
        <!--            android:layout_width="100dp"-->
        <!--            android:layout_height="30dp"-->
        <!--            android:layout_marginTop="5dp"-->
        <!--            android:layout_marginBottom="5dp"-->
        <!--            android:background="@drawable/monthly_outline_button">-->


        <!--            <TextView-->
        <!--                style="@style/TvSubHeading"-->
        <!--                android:layout_width="100dp"-->
        <!--                android:layout_height="70dp"-->
        <!--                android:gravity="center"-->
        <!--                android:text="5% off"-->
        <!--                android:textColor="@color/md_white_1000"-->
        <!--                android:textStyle="bold">-->

        <!--            </TextView>-->

        <!--        </RelativeLayout>-->

        <LinearLayout
            android:id="@+id/rel_prodCart_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="4dp"
            android:orientation="horizontal"
            android:weightSum="3"
            android:background="@drawable/textview_border"
            android:visibility="gone">


            <Button
                android:id="@+id/prodMinusButtonHome"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:background="@drawable/ic_delete"
                android:textColor="@color/md_red_A700"
                android:textSize="20sp"
                android:layout_weight="1"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/productQuanTextViewHome"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:text="1"
                android:textColor="#000000"
                android:textSize="16sp" />


            <Button
                android:id="@+id/prodAddButtonHome"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:background="@drawable/ic_round_button"
                android:layout_weight="1"

                android:textColor="@color/md_green_A700"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <Button
            android:id="@+id/addToCartButtonHome"
            style="@style/TvMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/md_yellow_800"
            android:gravity="center"
            android:text="Add to cart"
            android:textAllCaps="true"
            android:textColor="@color/md_white_1000" />


    </LinearLayout>


</androidx.cardview.widget.CardView>
