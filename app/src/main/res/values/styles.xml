<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="TvHeading" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/md_black_1000</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/biryani_bold</item>
    </style>

    <style name="TvSubHeading" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/md_black_1000</item>
        <item name="android:textSize">19sp</item>
        <item name="android:fontFamily">@font/cabin_semibold</item>
    </style>

    <style name="TvRegular" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/md_black_1000</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/cabin</item>
    </style>


    <style name="TvMedium" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/md_black_1000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/cabin_medium</item>
    </style>

    <style name="exitDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/md_black_1000</item>
        <item name="android:textColorPrimary">@color/md_black_1000</item>
        <item name="android:textColor">@color/md_black_1000</item>
        <item name="android:windowBackground">@drawable/exit_dialog</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
